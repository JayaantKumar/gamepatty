// Public read-only rules
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /games/{game} {
      allow read: if true;
      allow write: if request.auth != null; // Only authenticated users can write
    }
    match /news/{item} {
      allow read: if true;
      allow write: if request.auth != null; // Only authenticated users can write
    }
  }
}